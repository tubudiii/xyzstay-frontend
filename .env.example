# Frontend base URL (required by NextAuth)
# For production, set to your public URL: e.g. https://xyz-frontend.trisnautama.site
NEXTAUTH_URL=http://localhost:3000

# NextAuth secret (use `openssl rand -base64 32` to generate)
NEXTAUTH_SECRET=replace-with-strong-secret

# Backend API base URL used by RTK Query and during auth
# e.g. https://xyz-api.trisnautama.site/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# Public storage base URL used for images
# e.g. https://xyz-api.trisnautama.site
NEXT_PUBLIC_STORAGE_BASE_URL=http://localhost:8000
